<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <h1 class="col-8 offset-2">Signup</h1>
    <div class="col-8 offset-2">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <lable for="username" class="form-label mb-3">Username</lable>
                <input name="username" id="username" placeholder="Enter Title"  type="username" class="form-control" required>
                <div class="valid-feedback">Looks Good!</div>
              </div>
              <div class="mb-3">
                <lable for="email" class="form-label mb-3">Email</lable>
                <input name="email" id="email" placeholder="Enter EmailID"  type="email" class="form-control" required>
                
              </div>
              <div class="mb-3">
                <lable for="password" class="form-label mb-3">Password</lable>
                <input name="password" id="password" placeholder="Enter Password Credential"  type="password" class="form-control" required>
                
              </div>
              <button class="btn btn-success">Signup</button>
        </form>
    </div>
</div>