<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    
    <div class="col-8 offset-2">
  <br>
<h3>Create New Listing</h3>
<form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
          <lable for="title" class="form-label">Enter Place</lable>
          <input name="listing[title]" placeholder="Tajmahal"  type="text" class="form-control" required>
      
        </div>
        <div class="mb-3">
            <lable for="description" class="form-label">Description</lable>
            <textarea name="listing[description]"  class="form-control" required>
                
            </textarea>
            <div class="invalid-feedback">Please Enter Valid Description</div>
        </div>
        
        

        <div class="mb-3"><lable for="image" class="form-label">Upload Listing Image</lable>
            <input name="listing[image]"  type="file" class="form-control"required>

        </div>
       <div class="row">

       <div class="mb-3 col-md-4"><lable for="price" class="form-label">Enter price</lable>
        <input name="listing[price]" placeholder="Rate of Staying"   class="form-control" required>
        <div class="invalid-feedback">Enter a Valid Number</div>

       </div>
        
        <div class="mb-3 col-md-8"><lable for="country" class="form-label">Enter Category</lable>
            <input name="listing[country]" placeholder="Spiritual, Cultural, Wildlife, Hii station, Medical, Adventure, Island..." type="text" class="form-control" required>
            <div class="invalid-feedback">Enter a Valid Country Name</div>
        </div>
        </div>
        <div class="mb-3"><lable for="location" class="form-label">Enter Location</lable>
            <input name="listing[location]" placeholder="Pune, Maharashatra" type="text" class="form-control" required>
            <div class="invalid-feedback">Enter a Valid Location</div>
        </div>
        
        
        <button class="btn btn-dark add-btn mt-3">Add</button>

        <br>
        
    </div>
</form>
</div>

